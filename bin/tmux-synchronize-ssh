usage() {
    printf "usage: %s [-o ssh_option] [user@]host1 [[user@]host2...]\n" "$(basename "$0")"
    exit "$1"
}

SSH_OPTIONS=""

while test $# -gt 0 ; do
    case $1 in
        -h)
            usage 0
            ;;
        -o)
            SSH_OPTIONS="${SSH_OPTIONS} $1 $2"
            shift 2
            ;;
        *)
            break
            ;;
    esac
done

if [ -z "${TMUX}" ]; then
    printf "error: \$TMUX not set, please run '%s' inside a tmux session\n" "$(basename "$0")" 1>&2
    exit 1
fi
[ -z "$1" ] && usage 1 1>&2

FIRST="$1"
shift
if [ -n "$1" ] ; then
    for i in "$@" ; do
        tmux splitw -d "ssh ${SSH_OPTIONS} $i"
        tmux select-layout tiled > /dev/null
    done
    tmux set-option -w synchronize-panes on > /dev/null
fi
ssh ${SSH_OPTIONS} ${FIRST}
[ -n "$1" ] && tmux set-option -w synchronize-panes off > /dev/null

exit 0
